<% layout("layouts/boilerplate.ejs") %>

<script>
    let listingCost = <%= listing.price %> ;
</script>

<body>

<div class="container mt-5 mb-3">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">Reserve Your Stay</h2>
                
                <!-- Listing Details -->
                <div class="mb-3">
                    <h4><%= listing.title %></h4>
                    <p class="text-muted"><%= listing.location %>, <%= listing.country %></p>
                    <img src="<%= listing.image.url %>" class=" card-img-top" alt="Listing Image">
                </div>

                <!-- Reservation Form -->
                <form action="/listings/<%= listing._id %>/reserve" method="POST" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="checkIn" class="form-label">Check-in Date</label>
                        <input type="date" id="checkIn" name="checkIn" class="form-control" required>
                        <div class="invalid-feedback">Please select a check in date</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="checkOut" class="form-label">Check-out Date</label>
                        <input type="date" id="checkOut" name="checkOut" class="form-control" required>
                        <div class="invalid-feedback">Please select a check out date</div>
                    </div>

                    <div class="mb-3">
                        <p><strong>Price per night:</strong> &#8377;<%= listing.price.toLocaleString("en-IN") %></p>
                        <p><strong>Total Cost:</strong> &#8377;<span id="totalCost">0</span></p>
                    </div>

                    <input type="hidden" name="totalCost" id="hiddenTotalCost">
                    
                    <button type="submit" class="btn btn-outline-danger w-100">Confirm Reservation</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/reserve.js"></script>

</body>

